# Application
PHX_HOST=localhost
PORT=4000
SECRET_KEY_BASE=your-secret-key-base-here-min-64-chars
MIX_ENV=dev

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost/rephi_dev
DB_USERNAME=postgres
DB_PASSWORD=postgres
